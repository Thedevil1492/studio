rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user is the owner of the document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read and write to their own profile document.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      // A user can create their own user document upon signup.
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Users can read and write to their own chats subcollection.
    match /users/{userId}/chats/{chatId} {
        allow read, write: if isOwner(userId);
    }

    // Users can read and write to their own messages subcollection.
    match /users/{userId}/messages/{messageId} {
        allow read, write: if isOwner(userId);
    }
  }
}
